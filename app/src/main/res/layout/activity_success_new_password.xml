<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".SuccessNewPassword">


    <ImageView
        android:id="@+id/img_success"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/check_mark" />

    <TextView
        android:id="@+id/txt_success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="36dp"
        android:textColor="@color/black"
        android:text="Success!" />

    <TextView
        android:id="@+id/txt_success_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:padding="20dp"
        android:text="Education is the process of facilitating learning, or the acquisition of knowledge, skills, values, beliefs, and habits. Educational methods include teaching, training, storytelling, discussion and directed research."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"/>


</LinearLayout>