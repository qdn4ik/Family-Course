<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".VerifyForgetPassword">

    <ImageView
        android:id="@+id/img_verify_forget"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/verify_code"/>

    <TextView
        android:id="@+id/txt_verify_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_bold" />

    <com.chaos.view.PinView
        android:id="@+id/et_verify_forget"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:cursorVisible="true"
        android:inputType="number"
        android:itemBackground="@color/grey"
        app:cursorColor="#333333"
        app:hideLineWhenFilled="true"
        app:itemCount="6"
        app:itemHeight="50dp"
        app:itemRadius="5dp"
        app:itemWidth="50dp"
        app:lineColor="#333333"
        app:lineWidth="1dp" />

    <Button
        android:id="@+id/btn_verify_forget"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="25dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_design"
        android:fontFamily="@font/montserrat"
        android:text="Verify"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</LinearLayout>